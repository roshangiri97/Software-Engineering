<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="512.0" prefWidth="954.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.disasterresponse.controller.ManageDisasterController">

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#handleBackAction" text="Back" />

    <!-- ComboBox for Sorting Options -->
    <ComboBox fx:id="sortComboBox" promptText="Sort by" style="-fx-background-color: #a6a4a4;" />

    <!-- TableView for Disaster Data -->
    <TableView fx:id="disasterTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="locationColumn" prefWidth="150" text="Location" />
            <TableColumn fx:id="typeColumn" prefWidth="150" text="Type" />
            <TableColumn fx:id="severityColumn" prefWidth="100" text="Severity" />
            <TableColumn fx:id="statusColumn" prefWidth="82.39996337890625" text="Status" />
            <TableColumn fx:id="actionColumn" prefWidth="271.20013427734375" text="Actions" />
            <TableColumn fx:id="assistanceColumn" prefWidth="157.599853515625" text="Send Assistance" />
        </columns>
    </TableView>

</VBox>
