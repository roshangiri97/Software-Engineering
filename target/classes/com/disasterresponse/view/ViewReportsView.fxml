<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="560.0" prefWidth="600.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.disasterresponse.controller.ViewReportsController">
    
    <Button fx:id="backButton" onAction="#handleBackAction" text="Back" />
    
    <!-- Wrapping the reports in a ScrollPane -->
    <ScrollPane fitToWidth="true" prefHeight="800" prefWidth="600">
        <VBox fx:id="reportsVBox" spacing="20" style="-fx-padding: 10;">
            <!-- Each report will be dynamically added here -->
        </VBox>
    </ScrollPane>
</VBox>
